<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="car" class="Car">
        <property name="engine" ref="engine"/>
        <property name="wheels" ref="wheel"/>
    </bean>

    <bean id="wheel" class="carparts.Wheel">
        <property name="tyres" ref="tyres"/>
    </bean>

    <bean id="engine" class="carparts.Engine">
        <property name="engineÐ¡apacity" value="2.4"/>
    </bean>

    <bean id="tyres" class="carparts.Tyres">
        <constructor-arg index="0" value="12.5"/>
        <constructor-arg index="1" value="Super Swamper Bogger"/>
    </bean>

</beans>